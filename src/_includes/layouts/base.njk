<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Standard meta tags -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ description }}">
    <meta name="keywords" content="">
    <link rel="canonical" href="{{ client.domain }}{{ page.url }}">

    <!-- Social Media Display -->
    <meta property="og:title" content="{{ title }}"/>
    <meta property="og:description" content="{{ description }}"/>
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="{{ client.domain }}{{ page.url }}"/>
    <meta property="og:image" content="{{ '/assets/images/og-image.webp' | url }}"/>
    <meta property="og:image:secure_url" content="{{ '/assets/images/og-image.webp' | url }}"/>

    <!-- Favicons -->
    <link rel="icon" href="{{ '/assets/images/favicons/favicon.ico' | url }}" sizes="48x48">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/images/favicons/apple-touch-icon.png' | url }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ '/assets/images/favicons/favicon-32x32.png' | url }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ '/assets/images/favicons/favicon-16x16.png' | url }}">
    <link rel="manifest" href="{{ '/assets/images/favicons/site.webmanifest' | url }}">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <!-- Sitewide Stylesheets and Scripts -->
    <link rel="stylesheet" href="{{ '/assets/css/styles.css' | url }}">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Rammetto+One&display=swap" rel="stylesheet">

    {% block head %}{% endblock %}

    <title>{{ title }}</title>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "{{ client.name }}",
        "url": "{{ client.domain }}",
        "logo": "{{ client.domain }}/assets/images/logo.png",
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "{{ client.phone }}",
          "contactType": "Customer Service"
        }
      }
    </script>

    <!-- ADD GOOGLE ANALYTICS -->

  </head>

  <body>
    {% include "components/header.njk" %}
    <main>
      {% block content %}{% endblock %}
    </main>
    {% include "components/footer.njk" %}
    <script src="{{ '/assets/js/main.js' | url }}"></script>
  </body>
</html>